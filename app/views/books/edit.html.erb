<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div>
    <label for="inputTitle">Title</label>
    <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
  </div>
  <div>
    <label for="inputBody">Opinion</label>
    <%= f.text_area :body, id:"inputBody", placeholder: "感想" %>  
  </div>
  <div>
    <%= f.submit "Updata Book" %>
  </div>
<% end %>
<p>
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</p>