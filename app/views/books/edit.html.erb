<div class="container">
  <div class="row d-flex flex-column justify-content-center">
    <div class="col-6 mx-auto mt-4"> 
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <% if @book.errors.count== 1 %> 
          <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
        <% else %>
          <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
        <% end %>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="mb-3">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "d-block w-100" %>    
        </div>
        <div class="mb-3">
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body, id:"inputBody", class: "d-block w-100" %>    
        </div>
        <div class="mb-3">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <div>
        <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>