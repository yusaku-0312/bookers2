<div class="container">
  <div class="row">
    <%= render "/books/form", user: @user, new_book: @new_book %>
    <div class="col-md-8 py-3 ml-4">
      <div class="p-3">
        <h2>Books</h2>
        <table class="table d-flex table-hover table-inverse">
          <tbody>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user_id) do %>
                    <%= image_tag book.user.get_profile_image(100, 100) %>
                  <% end %>
                </td>
                <td class="mx-0 px-0">
                  <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
